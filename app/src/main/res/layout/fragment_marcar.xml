<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.gestion.directorio.MarcarFragment">

    <!-- Campo donde se muestra el número -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_sugerencias"
        android:layout_width="0sp"
        android:layout_height="@dimen/_170sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:maxHeight="300dp"
        android:clipToPadding="false"
        android:paddingVertical="@dimen/_3sdp"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/item_numero_marcar" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_sugerencias">


        <ImageButton
            android:id="@+id/btn_agregar"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_margin="@dimen/_5sdp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/person_add" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_numero"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/_2sdp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_numero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="false"
                android:focusable="false"
                android:gravity="center"
                android:hint="Introducir número"
                android:inputType="none"
                android:textSize="@dimen/_20sdp" />

        </com.google.android.material.textfield.TextInputLayout>

        <ImageButton
            android:id="@+id/btn_borrar"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/_5sdp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/backspace" />

    </LinearLayout>

    <!-- Grid de botones -->

    <GridLayout
        android:id="@+id/grid_teclas"
        android:layout_width="0dp"
        android:layout_height="@dimen/_165sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:columnCount="3"
        android:rowCount="4"
        android:alignmentMode="alignBounds"
        android:columnOrderPreserved="false"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.App.DialpadButton"
            android:text="1" />
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.App.DialpadButton"
            android:text="2"
            android:tag="ABC" />
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.App.DialpadButton"
            android:text="3"
            android:tag="DEF" />
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.App.DialpadButton"
            android:text="4"
            android:tag="GHI" />
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.App.DialpadButton"
            android:text="5"
            android:tag="JKL" />
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.App.DialpadButton"
            android:text="6"
            android:tag="MNO" />
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.App.DialpadButton"
            android:text="7"
            android:tag="PQRS" />
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.App.DialpadButton"
            android:text="8"
            android:tag="TUV" />
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.App.DialpadButton"
            android:text="9"
            android:tag="WXYZ" />
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.App.DialpadButton"
            android:text="*" />
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.App.DialpadButton"
            android:text="0"
            android:tag="+" />
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.App.DialpadButton"
            android:text="#" />
    </GridLayout>



</androidx.constraintlayout.widget.ConstraintLayout>